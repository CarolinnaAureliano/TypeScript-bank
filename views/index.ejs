<%- include('./header'); %>

    <main class="indexmain">
        <% clientes_achados.forEach(function(clientes){ %>
            <div class="row">
                <div class="card text-center">
                    <div class="col-md-10">
                        <div class="card-body">
                            <h2 class="card-title">Olá <%= clientes.nome %></h2>
                            <p class="card-text">Seu saldo é: R$ <%= clientes.saldo %>
                            </p>
                            <a href="/transferir/<%= clientes.id %>" class="btn btn-outline-warning">Fazer transferência</a>
                            <a href="#" class="btn btn-outline-warning">Ver extrato</a>
                            <a href="#" class="btn btn-outline-warning">Fazer pagamento</a>

                        </div>
                    </div>
                </div>
            </div>
                    <% }) %>
                        
    </main>

    <%- include('./footer'); %>