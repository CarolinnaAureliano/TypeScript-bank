<%- include('./header'); %>

    <main class="container-fluid">
        <div class="row">
            <div class="card text-center">
                <div class="col-md-11">
                    <div class="card-body">
                <h3 class="darker_color">Faça seu login!</h3>
                <p>Informe seu email e senha nos campos abaixo:</p>
                <p class="alert_red">
                    <% if (messages.error) { %>
                        <%= messages.error %>
                            <% } %>
                </p>

                <form action="/login" method="post">
                    <div class="form-row align-items-center">
                      <div class="col-10">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control mb-2" id="email" placeholder="Exemplo@email.com.br">
                      </div>
                      <div class="col-10">
                            <label for="password">Senha</label>
                            <input  type="password" id="password" name="password" placeholder="******" class="form-control mx-sm-3" aria-describedby="passwordHelpInline">
                            <small id="passwordHelpInline" class="text-muted">
                             <a href="#">Esqueceu sua senha ?</a> </small>
                          </div>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-warning">Entrar</button>
                  </form>
                  <p class="link">
                    <a href="/cadastro" class="link">Não possui uma conta? Cadastre-se.</a>
                </p>

